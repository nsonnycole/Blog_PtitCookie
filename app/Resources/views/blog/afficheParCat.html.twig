{% extends 'base.html.twig' %}
{% block body %}
<!--=====================
          Content
======================-->

<section id="content">

    <!-- Page Content -->
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Affichage par catégorie</h1>
                <ol class="breadcrumb">
                    <li><a href="{{url('homepage')}}">Accueil</a></li>
                    <li><a href="{{url('blog')}}">Article</a></li>
                    <li class="active">Catégorie : </li>
                </ol>
            </div>
        </div>

        <!-- /.row -->
        {% for article in articles %}
        <!-- Blog Post Row -->
        <div class="row">
            <div class="col-md-1 text-center">
                <p><i class="fa fa-camera fa-4x"></i>
                </p>
                <p>{{article.date|date('d/m/Y')}}</p>
            </div>
            <div class="col-md-5">
                <a href="blog-post.html">
                    <img class="img-responsive img-hover" src="{{article.image}}" style="width:600px;height:300px" alt="">
                </a>
            </div>
            <div class="col-md-6">
                <h3>
                    <a href="{{ path('afficheArticle', {'id': article.id}) }}">{{article.titre}}</a>
                </h3>
                <p>Auteur : <a href="#">{{article.membre.username}}</a></p>
                <p>Catégorie : {{article.categorie.nom}}</p>
                <p>{{article.description}}</p>
                <p> Tags : #Good</p>
                <a class="btn btn-warning" href="{{ path('afficheArticle', {'id': article.id}) }}">Plus.. <i class="fa fa-angle-right"></i></a>

            </div>
        </div>
        <!-- /.row -->
        <hr>
      {% endfor%}
      <!-- Pager -->
      <div class="row">
          <ul class="pager">
              <li class="previous"><a href="#">&larr; Précédent</a>
              </li>
              <li class="next"><a href="#">Suivant &rarr;</a>
              </li>
          </ul>
      </div>
      <!-- /.row -->

      <hr>

    </div>
  </div>
</section>
{% endblock %}
