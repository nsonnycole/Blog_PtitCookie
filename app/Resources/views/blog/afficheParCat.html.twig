{% extends 'base.html.twig' %}
{% block menu %}
<header>
  <div class="header_top">
    <div class="container">
      <div class="row">
        <div class="grid_12">
          <h1><a href="/"></a></h1>
        </div>
      </div>
    </div>
  </div>
<section id="stuck_container">
<!--==============================
            Stuck menu
=================================-->
  <div class="container">
    <div class="row">
      <div class="grid_12 ">
        <h1 class="logo">
          <a href="index.html">
            Ptit'Cookie
          </a>
        </h1>
        <div class="navigation ">
          <nav>
            <ul class="sf-menu">
             <li><a href="/">Accueil</a></li>
              <li><a href="/blog">FAQ</a></li>
             <li class="current"><a href="/blog">Blog</a></li>
              <li><a href="/blog">Contact</a></li>
             <li><a href="admin">Administration</a></li>
           </ul>
          </nav>
          <div class="clear"></div>
        </div>
       <div class="clear"></div>
      </div>
   </div>
  </div>
</section>
</header>
{% endblock %}
{% block body %}
<!--=====================
          Content
======================-->
<section id="content">
  <div class="container">
    <div class="row">
      <div class="grid_8">
        <h2>Affichage par catégorie </h2>
        {% for article in articles %}
        <div class="blog">
          <img src="{{article.image}}" alt="" class="img_inner">
          <div class="text1 color1"><a href="#">{{article.description}}</a></div>
          <p>{{article.contenu}}</p>
          <br>
          <a href="#" class="btn">Plus</a>
          <table>
          <tbody>
            <tr>
              <td>{{article.date|date('d-m-Y')}}</td>
              <td><a href="#"><div class="fa fa-user"></div> {{article.membre.username}}</a></td>
              <td><a href="#"><span class="fa fa-link"></span> Permalink</a></td>
            </tr>
            <tr>
              <td><div class="fa fa-bookmark"></div> Catégorie {{article.categorie.nom}}  </td>
              <td colspan="2"><div class="fa fa-tag"></div>{% for tag in article.tags %} #{{tag.getName}}, {% endfor %}</td>
            </tr>
            <tr>
              <td><div class="fa fa-comments"></div>Commentaires</td>
              <td>
              <div class="fa fa-thumbs-up"></div>0
              </td>
            </tr>
          </tbody>
        </table>
        </div>
      </div>

      <div class="grid_4">
        <h2>Categories</h2>
        <ul class="list-1">
          <li><span></span><a href="#"><div class="fa fa-chevron-right"></div>Beauté </a></li>
          <li><span></span><a href="#"><div class="fa fa-chevron-right"></div>Mode</a></li>
          <li><span></span><a href="#"><div class="fa fa-chevron-right"></div>Cuisine </a></li>
        </ul>
      </div>
    {% endfor%}
    </div>
  </div>
</section>
{% endblock %}
