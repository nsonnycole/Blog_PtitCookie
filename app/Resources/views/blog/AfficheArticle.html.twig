{% extends 'base.html.twig' %}
{% block body %}
<!--=====================
          Content
======================-->
<section id="content">
  <div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Affichage d'un article</h1>
            <ol class="breadcrumb">
                <li><a href="{{url('homepage')}}">Accueil</a></li>
                <li><a href="{{url('blog')}}">Article</a></li>
                <li class="active">Article : {{ Article.titre }}</li>
            </ol>
        </div>
    </div>
      <div class="grid_12">
        <h2>{{ Article.titre }}</h2>
        <div class="blog">
          <center><img src="{{ Article.image}}" alt="" style="width:400px;"class="img_inner"></center>
          <div class="text1 color1"><a href="#">{{ Article.description }}</a></div>
          <p>{{ Article.contenu }}</p>.

          <br>
          <br>

            <p><span class="fa fa-calendar"></span> Posté le : {{Article.datePost|date('d-m-Y')}}</p>
            <p><div class="fa fa-comments"></div> 0 Commentaire(s)</p>
          <br>
          <table>
          <tbody>
            <tr>
                <td><a href="#"><div class="fa fa-user"></div>{{Article.membre.getUsername()}}</a></td>
                <td><a href=""><img src="{{asset('images/cookie.png')}}"></a>0</td>
                <td><div class="fa fa-bookmark"></div> Catégorie: <a href="{{ path('afficheParCat', {'id': Article.categorie.id}) }}">{{ Article.categorie.nom }}</a>  </td>
              </tr>
          </tbody>
        </table>

        </div>
      </div>
      <div class="row">
      <form class="col s6">
        <div class="row">
          <h2><div class="fa fa-comments"></div> Commentaires</h2>
        {{ form_start(formComment) }}
          <div class="input-field col s6">
            {{ form_row(formComment.auteur) }}
          </div>
          <div class="input-field col s6">
                {{ form_row(formComment.commentaire) }}
          </div>
            {{ form_row(formComment.Ajouter) }}
        </div>
        <div class="input-field col s6">
            {{ form_end(formComment) }}
        </div>
      </form>
    </div>

      <div class="grid_3">
          <h2><div class="fa fa-tag"></div> TAGS</h2>
          --------------------------------

         <p>{% for tag in Article.tags %} #{{tag.getName}}, {% endfor %}</p>

      </div>
    </div>
  </div>
</section>
{% endblock %}
