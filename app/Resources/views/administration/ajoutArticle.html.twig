{% extends 'base.html.twig' %}
{% block body %}
<!--=====================
          Content
======================-->
<section id="content">
<div class="container">
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">Articles
          </h1>
          <ol class="breadcrumb">
              <li><a href="{{url('blog')}}">Accueil</a>
              </li>
              <li><a href="{{url('indexAdmin')}}">Administration</a></li>
              <li class="active">Nouvel article</li>
          </ol>
      </div>
  </div>


          <div class="row">
            <h2><div class="fa fa-plus"></div> Nouvel article</h2>
            {{ form_start(form) }}
            <div class="input-field col s6">
              {{ form_row(form.titre) }}
            </div>

            <div class="input-field col s6">
              {{ form_row(form.description) }}
            </div>
            <div class="input-field col s6">
              {{ form_row(form.contenu) }}
            </div>

            <div class="input-field col s6">
            {% for cat in form.categorie %}
                <li>{{ form_row(cat.nom) }}</li>
            {% endfor %}
            </div>
            <div class="input-field col s6">
            {% for tag in form.tags %}
                <li>{{ form_row(tag.nom) }}</li>
            {% endfor %}
            </div>
          <!--  <label for="input-field col s6">Image</label>-->
            <div class="input-field col s6">
              {{ form_row(form.image) }}
            </div>
            <div class="input-field col s6">
            <label for="input-field col s6">Difficult√©</label><br>
              {{ form_widget(form.difficulte) }}
            </div>
              <br>
            <br>
            </div>
            <button class="btn" name="form[submit]" data-type="submit">Ajouter</button>
            {{ form_end(form) }}
          </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
